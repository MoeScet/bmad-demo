# Teams Bot Service Environment Configuration
# Copy this file to .env and fill in the actual values

# Environment Settings
ENVIRONMENT=development
SERVICE_NAME=teams-bot
SERVICE_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/bmad_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Microsoft Teams Bot Configuration
TEAMS_BOT_APP_ID=your-teams-bot-app-id-here
TEAMS_BOT_APP_PASSWORD=your-teams-bot-app-password-here
TEAMS_BOT_TENANT_ID=your-teams-tenant-id-here
TEAMS_BOT_TIMEOUT=30.0

# Service Communication Timeouts
FAST_QA_TIMEOUT=3.0
SEMANTIC_SEARCH_TIMEOUT=12.0
SAFETY_CLASSIFICATION_TIMEOUT=1.0
USER_CONTEXT_TIMEOUT=0.5

# HTTP Configuration
HTTP_TIMEOUT=30.0
HTTP_MAX_RETRIES=3
HTTP_BACKOFF_FACTOR=0.3

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json
CORRELATION_ID_HEADER=X-Correlation-ID

# Security Configuration
ALLOWED_HOSTS=["localhost", "127.0.0.1", "*.railway.app"]
CORS_ORIGINS=[]

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8001
HEALTH_CHECK_TIMEOUT=5.0