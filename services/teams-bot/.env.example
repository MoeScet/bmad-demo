# Teams Bot Service Environment Configuration Template
# Copy this file to .env and fill in the required values

# Service Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bmad_db

# Microsoft Teams Bot Framework Configuration
TEAMS_BOT_APP_ID=your-teams-app-id-here
TEAMS_BOT_APP_PASSWORD=your-bot-framework-password-here
TEAMS_BOT_WEBHOOK_URL=https://your-domain.com/api/messages

# Microsoft Graph API Configuration
MICROSOFT_GRAPH_BASE_URL=https://graph.microsoft.com/v1.0
MICROSOFT_GRAPH_SCOPE=https://graph.microsoft.com/.default

# Service Timeouts (in seconds)
USER_CONTEXT_TIMEOUT=0.5
TEAMS_API_TIMEOUT=30.0

# External Service URLs
QUERY_ORCHESTRATION_URL=http://localhost:8001
USER_CONTEXT_URL=http://localhost:8002

# CORS Configuration (optional)
# CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Server Configuration (optional)
# HOST=0.0.0.0
# PORT=8000