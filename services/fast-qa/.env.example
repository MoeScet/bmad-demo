# Fast Q&A Service Environment Configuration Template
# Copy this file to .env and update with your values

# Service Configuration
ENVIRONMENT=development
SERVICE_VERSION=1.0.0
HOST=0.0.0.0
PORT=8003

# Database Configuration  
FAST_QA_DATABASE_URL=postgresql+asyncpg://fastqa_user:fastqa_password@localhost:5432/fastqa_db

# Performance Settings
FAST_QA_TIMEOUT=3.0
FAST_QA_MIN_SCORE=0.1

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Redis for caching (if implemented)
# REDIS_URL=redis://localhost:6379/0

# Optional: OpenTelemetry Configuration
# OTEL_SERVICE_NAME=fast-qa
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Database Migration Settings
# DATABASE_MIGRATION_URL=postgresql://fastqa_user:fastqa_password@localhost:5432/fastqa_db